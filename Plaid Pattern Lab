import pygame
pygame.init


windowWidth = 500
windowHeight = 500
window = pygame.display.set_mode((windowWidth, windowHeight))
clock = pygame.time.Clock()  # Will allow us to set framerate

RED = (255,0,0)
GREEN = (0,255,0)
BLUE = (0,0,255)
GRAY = (170,170,170)
WHITE = (255,255,255,128)

while True:
    
    ev = pygame.event.poll()    
    if ev.type == pygame.QUIT:  
        break                   
    window.fill((255,255,255))


#HORIZONTAL

    for i in range(11):
        pygame.draw.line(window, GRAY, (0,i*50), (500,i*50), 35)

    for i in range(11):
        pygame.draw.line(window, RED, (0,i*50), (500,i*50), 5)


#VERTICAL
    transparent_surface = pygame.Surface(window.get_size(), pygame.SRCALPHA)

    for i in range(11):
        pygame.draw.line(window, RED, (i*50,0), (i*50,500), 20)

    for i in range(11):
        pygame.draw.line(window, WHITE, (i*50,0), (i*50,500), 10)

    window.blit(transparent_surface,(0,0))

    pygame.display.flip()
    clock.tick(60) # Force frame rate to 60fps or lower


pygame.quit()
   

























